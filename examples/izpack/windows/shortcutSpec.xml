             target="$INSTALL_PATH/multibit.exe" 
             description="MultiBit" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/multibit.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>    <shortcut name="Uninstall MultiBit ${project.version}" 
